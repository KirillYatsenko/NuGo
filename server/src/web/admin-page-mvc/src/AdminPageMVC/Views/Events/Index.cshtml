@model IEnumerable<Event>

@{
    ViewData["Title"] = "Events";
}

<div class="text-center">
    <h1 class="display-4">Events</h1>
    <!-- <h2>Please fetch events in the future for GOD SAKE</h2> -->
</div>

<div class="text-center">
    <div class="btn-group" role="group" aria-label="Basic example">
    <a asp-action="Index" type="button" class="btn btn-primary">Relevant</a>
    <a asp-action="History" type="button" class="btn btn-primary">History</a>
    </div>
</div>


<table id="eventsTable" class="table table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClosestSchedule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetailsUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deleted)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosestSchedule.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a class="datatables-link" href="@item.DetailsUrl" target="_blank">Scrap souce</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deleted)
            </td>
         
            <!-- <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td> -->
            <td>
                <a class="datatables-link" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="datatables-link" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="datatables-link" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
